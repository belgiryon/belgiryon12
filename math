#include <stdio.h>
#include <math.h>

int main(void)
{
	float a, b, c, p, ha, hb, hc;
	
	printf("Enter a=%5.2f. \n", a);
	scanf("%f", &a);
	
	printf("Enter b=%5.2f. \n", b);
	scanf("%f", &b);
	
	printf("Enter c=%5.2f. \n", c);
	scanf("%f", &c);

	if (a <= 0.00 || b <= 0.00 || c <= 0.00)
	{
		printf("Wrong Condition One of the sides is equal to or less than 0. \n");

	}
	else if ((a + b) - c <= 0.00 || (a + c) - b <= 0.00 || (b + c) - a <= 0)
	{
		printf("The sum of the two sides is equal to or less than the third side \n");
	}
	else
	{
		p = (a + b + c) / 2;
		ha= 2 * sqrt(p * (p - a) * (p - b) * (p - c)) / a;
		hb= 2 * sqrt(p * (p - a) * (p - b) * (p - c)) / b;
		hc= 2 * sqrt(p * (p - a) * (p - b) * (p - c)) / c;
		printf("ha=%10.2f \n", ha);
		printf("hb=%10.2f \n", hb);
		printf("hc=%10.2f \n", hc);
        getchar();
	}
	return 0;
    
	
}

