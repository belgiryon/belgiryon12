#include <stdio.h>
#include <conio.h>
#include <math.h>
#include <iostream>
using namespace std;
int main()

{
    loop:
    int x;

    cout<<"Enter X: -1000 to 1000 \n";
    cin>>x;
    if (x < 0)
    {
       if (x % 2 != 0)
       {
           if ((x < -99) & (x > -1000))
           {
               cout<<"Отрицательное нечетное четырехзначное число " << x << endl;
           }
           else
           if ((x < -9) & (x > -100))
           {
               cout<<" Отрицательное нечетное двузначное число " << x << endl; 
           }
            else
            if ((x < 0 ) & (x > -10))
            {
               cout<<"Отрицательное нечетное однозначное число" << x << endl;
            }                     
       }
       else
        if (x % 2 == 0)
       {
          if ((x < -99) & (x> -1000))
          {
             cout<<"трицательное четное трехзначное число"<< x<< endl;
          }
          else
          if ((x< -9) & (x > -100))
          {
              cout <<"Отрицательное четное двузначное число"<< x << endl;
          }
          else
          if ((x < 0) & (x > -10) )
          {
             cout<<"Отрицательное четное однозначное число" << x << endl;
          }    
       }
       
    }
    else
    if (x > 0)
    {
        if (x % 2!=0)
        {
            if ((x>99) & (x<1000))
            {
                cout<<"Положительное нечетное трехзначное число"<< x << endl;
            }
            else
            if ((x>9) & (x<100))
            {
                cout<<"Положительное нечетное двузначное число"<< x << endl;
            }
            else
            if ((x>0) & (x<10))
            {
                cout<<"Положительное нечетное однозначное число"<< x << endl;
            }  
        }
    else
        if (x % 2 == 0)
    {
        if ((x>99) & (x<1000))
        {
            cout<<"Положительное четное трехзначное число"<< x<< endl;
        }
        else
        if ((x >9) & (x < 100))
        {
            cout<<"Положительное четное двузначное число"<< x <<endl;
        }
        else
        if ((x>0) & (x<10))
        {
            cout<<"Положительное четное однозначное число"<< x << endl;
        }
    }
 }
    if (x ==0)
    {
        cout<<"нулевое число"<< x<< endl;
    }
    goto loop;
}
